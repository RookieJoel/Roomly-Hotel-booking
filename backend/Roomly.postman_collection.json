								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"let response;\r",
									"try {\r",
									"    response = pm.response.json();\r",
									"} catch (e) {\r",
									"    response = {};\r",
									"}\r",
									"\r",
									"const new_user_id = response.id;\r",
									"const new_username = typeof response.name === 'string' ? response.name : '';\r",
									"const new_email = typeof response.email === 'string' ? response.email : '';\r",
									"\r",
									"pm.globals.set(\"global_user_id\", new_user_id);\r",
									"pm.globals.set(\"global_username\", new_username);\r",
									"pm.globals.set(\"global_email\", new_email);\r",
									"\r",
									"pm.execution.setNextRequest(\"User Login\");"
